      <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">
      <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.bundle.min.js" type="text/javascript"></script>
      <link href="/stylesheets/reset.css" rel="stylesheet" type="text/css">
      <link href="/stylesheets/estilo_home.css" rel="stylesheet" type="text/css">
      <link href="/stylesheets/tabela.css" rel="stylesheet" type="text/css">
      <link href="/stylesheets/menu.css" rel="stylesheet" type="text/css">
      <script type="text/javascript" src="/javascripts/script.js"></script>
      <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.2/css/all.css" integrity="sha384-/rXc/GQVaYpyDdyxK+ecHPVYJSN9bmVFBvjA/9eOB+pb3F2w2N6fc5qB9Ew5yIns" crossorigin="anonymous">


   </head>
   <body>
   <%- include('menu'); %>
    

    <div id="conteudo">
        <h1>Produto</h1>
        <br>
          <h2> Ler Nota XMl</h2>
          <br>
          <h5>Escolha a nota:</h5>
          <hr class="divisoria" />

 <form id="form"  method="POST" enctype="multipart/form-data">        
<input type="file" name="upXml" />
<button type="submit">Ler</button>
</form>
<br>       
<hr class="divisoria" />

<h5>Selecione abaixo os produtos que deseja salvar:</h5>


<form id="form" method="POST" action="/salvarProdutos" >
<table class="table">
        <thead>
          <tr>
            <th scope="col"><input type="checkbox" /></th>
            <th scope="col">Cód.Produto</th>
            <th scope="col">Descrição</th>
            <th scope="col">NCM</th>
            <th scope="col">Embalagem</th>
            <th scope="col">Quantidade</th>
            <th scope="col">Valor Unitário</th>
            <th scope="col">Valor Total</th>
          </tr>
        </thead>

        <tbody>
         
          <% for (var i =0; i< produtos.length; i++){ %>
          
            <tr>
              <td scope="row">
                <input name="selecionado[<%- i -%>]" type="checkbox" value="true" />
                <input name="cd_produto[<%- i -%>]" type="hidden" value ="<%= produtos[i].cProd %>"   />
                <input name="cd_ncm[<%- i -%>]"  type="hidden" value = "<%= produtos[i].NCM %>"/>
                <input name="ds_produto[<%- i -%>]"  type="hidden" value= "<%= produtos[i].xProd %>" />
                <input name="qt_estoque[<%- i -%>]"  type="hidden"  value = "<%= produtos[i].qCom %>"/>
                <input name="vl_unitario[<%- i -%>]"  type="hidden" value = "<%= produtos[i].vUnCom %>" />
                <input name="vl_total[<%- i -%>]"  type="hidden" value = "<%= produtos[i].vProd %>" />
                <input name="nm_embalagem[<%- i -%>]"   type="hidden" value = "<%= produtos[i].uCom %>" />

              </td>
              <td> <%= produtos[i].cProd %> </td>
              <td> <%= produtos[i].xProd %> </td>
              <td> <%= produtos[i].NCM %> </td>
              <td> <%= produtos[i].uCom %> </td>
              <td> <%= produtos[i].qCom %> </td>
              <td> <%= produtos[i].vUnCom %> </td>
              <td> <%= produtos[i].vProd %> </td>
                </tr>
                <% } %>
        </tbody>
      </table>
      <button type="submit" id="btnok">Salvar</button>
  </form>
  <br>
</div>
<% if (msg.length > 0){ %>
  <div class="alert alert-success alert-dismissible" id="msg">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      <%= msg %>
  </div>
<% } %>   

</body>
<script>
    //var produtos = <%= JSON.stringify(produtos)%>;
    //console.log(produtos);//Caso queira fazer com javascript

    function editar(produtos){
      var p = JSON.parse(produtos);


      var div = document.getElementById('container-editar');

      var cod = document.getElementById('cd_prod');
      var qttd = document.getElementById('qt_prod');
      var embalagem = document.getElementById('tipo_embalagem');

      cod.value = p.cProd;
      qttd.value = p.qCom;
      embalagem.value=p.uCom;


      div.style.display='block';
      console.log(p.uCom);
    }
  
</script>

</html>