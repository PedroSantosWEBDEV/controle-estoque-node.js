<!doctype html>
<html>
   <head>
     
      <meta charset="utf-8">
      <title>Editar Fornecedor</title>
      <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">
      <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.bundle.min.js" type="text/javascript"></script>
      <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
      <link href="/stylesheets/reset.css" rel="stylesheet" type="text/css">
      <link href="/stylesheets/forms.css" rel="stylesheet" type="text/css">
      <link href="/stylesheets/estilo_home.css" rel="stylesheet" type="text/css">
      <link href="/stylesheets/menu.css" rel="stylesheet" type="text/css">
      <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.2/css/all.css" integrity="sha384-/rXc/GQVaYpyDdyxK+ecHPVYJSN9bmVFBvjA/9eOB+pb3F2w2N6fc5qB9Ew5yIns" crossorigin="anonymous">
      <script  type="text/javascript" src="/javascripts/jquery-3.2.1.min.js"></script>
      <script type="text/javascript" src="/javascripts/script.js"></script>

      <script  type="text/javascript" src="/javascripts/typeahead.min.js"></script>

   </head>
   <body>
    <%- include('menu'); %>
    
    <div id="conteudo">
        <h1>Fornecedor</h1>
        <br>
        <h2> Editar Dados Fornecedor</h2>
        <br>

        <form id="form" method="post">
                <% for (var i =0; i< dados.length; i++){ %>

            <div class="form-row">
                    <div class="form-group  md-col-5">
                            <label for="cd_fornecedor">Código</label>
                            <input id="cd_fornecedor" class="form-control" name="cd_fornecedor" value="<%= dados[i].cd_fornecedor %>" />
                          </div>

              <div class="form-group  md-col-5">
                <label for="nm_razao">Nome/Razão Social</label>
                <input id="nm_razao" class="form-control" name="nm_razao" value ="<%= dados[i].nm_razao %>"/>
              </div>
              
              <div class="form-group  md-col-5">
                <label for="nm_fantasia">Nome Fantasia</label>
                <input id="nm_fantasia" class="form-control" name="nm_fantasia" value="<%= dados[i].nm_fantasia %>" />
              </div>
            </div>
          
        
            <div class="form-row">
              <div class="form-group md-col-3">
                <label for="cd_cnpj">CNPJ</label>
                <input id="cd_cnpj" name="cd_cnpj" class="form-control cnpj" value="<%= dados[i].cd_cnpj %>"   />
              </div>
        
              <div class="form-group md-col-3">
                <label for="cd_ie">Inscrição Estadual</label>
                <input id="cd_ie" name="cd_ie"  class="form-control ie" value="<%= dados[i].cd_ie %>"/> 
              </div>
            </div>
        
      
            <div class="form-row">
              <div class="form-group md-col-2">
                <label for="cd_cep">CEP</label>
                <input id="cd_cep" name="cd_cep" class="form-control cep" value="<%= dados[i].cd_cep %>" />
              </div>
        
              <div class="form-group md-col-4">
                <label for="ds_endereco">Endereço</label>
                <input id="ds_endereco" name="ds_endereco" class="form-control" value="<%= dados[i].ds_endereco %>" />
              </div>
        
              <div class="form-group md-col-1">
                <label for="cd_numero">Número</label>
                <input id="cd_numero" name="cd_numero" class="form-control" value="<%= dados[i].cd_numero %>"  />
              </div>
        
              <div class="form-group md-col-3">
                <label for="nm_bairro">Bairro</label>
                <input id="nm_bairro" name="nm_bairro" class="form-control" type="" value="<%= dados[i].nm_bairro %>"/>
              </div>
            </div>
        
            <div class="form-row">
              <div class="form-group md-col-2">
                <label for="nm_cidade">Cidade</label>
                <input id="nm_cidade" name="nm_cidade" class="form-control" value="<%= dados[i].nm_cidade %>" />
              </div>
        
              <div class="form-group md-col-1">
                <label for="nm_estado">Estado</label>
                <input id="nm_estado" name="nm_estado" class="form-control" value="<%= dados[i].nm_estado %>"/>
              </div>
            </div>
        
            <div class="form-row">
              <div class="form-group md-col-2">
                <label for="cd_telvendedor1">Telefone 1</label>
                <input id="cd_telvendedor1" name="cd_telvendedor1" class="form-control telefone" value="<%= dados[i].cd_telvendedor1 %>"/>
              </div>
        
              <div class="form-group md-col-2">
                <label for="cd_telvendedor2">Telefone 2</label>
                <input id="cd_telvendedor2" name="cd_telvendedor2" class="form-control telefone" value="<%= dados[i].cd_telvendedor2 %>" />
              </div>
        
              <div class="form-group md-col-3">
                <label for="nm_email">Email</label>
                <input id="nm_email" name="nm_email" class="form-control" type="email" value="<%= dados[i].nm_email %>" />
              </div>
        
              <div class="form-group md-col-3">
                <label for="nm_site">Site</label>
                <input id="nm_site" name="nm_site" class="form-control" value="<%= dados[i].nm_site %>" />
              </div>
            </div>
        
            <div class="form-row">
              <div class="form-group md-col-5">
                <label for="nom_vendedor">Vendedor</label>
                <input id="nom_vendedor" name="nom_vendedor" class="form-control" value= "<%= dados[i].nom_vendedor %>"/>
              </div>
            
              <div class="form-group md-col-2">
                <label for="nm_vendedor">Celular</label>
                <input id="nm_vendedor" name="nm_vendedor" class="form-control celular" value= "<%= dados[i].nm_vendedor %>" />
              </div>
            </div>
            <% } %>
            <input id="btnCancelar" type="reset"/>
            <button id="btnGravar" type="button" data-toggle="modal" data-target="#mymodal" >Inserir</button>
        
            <div id="mymodal" class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Salvar Novo Fornecedor</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    Deseja salvar os dados?
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                    <button type="button" class="btn btn-primary" onclick="document.querySelector('#form').submit()">Salvar</button>
                  </div>
                </div>
              </div>
            </div>
          </form>
</div>        
    </html>